@model IEnumerable<MilestoneCST_350_Damien_.Models.SavedGameModel>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				User Id
			</th>
			<th>
				Time Saved
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.UserId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TimeSaved)
				</td>
				<td>
					<button class="btn btn-secondary"> @Html.ActionLink("Resume", "ResumeSavedGame", new { Id = item.Id }) </button>
					<button class="btn btn-secondary">@Html.ActionLink("Delete", "DeleteSavedGame", new { Id = item.Id }, new { @class = "delete-link", onclick = "return confirm('Are you sure you want to delete this saved game?')" })</button>
				</td>
			</tr>
		}
	</tbody>
</table>
